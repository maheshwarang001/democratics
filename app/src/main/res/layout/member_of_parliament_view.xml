<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="20dp"
        android:elevation="20dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="State :"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView

                    android:id="@+id/state_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Maharashtra"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Name :"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Poonam Mahajan Alias Poonam Vajendla Rao"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Party:"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView

                    android:id="@+id/party_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="BJP"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Constituency:"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/constituency_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Bhandup"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="criminal cases :"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>

                <TextView

                    android:id="@+id/case_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="2"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="education :"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/education_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Graduate"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="assets :"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/assets_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="100000000"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>





    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>